<h1>Users#show</h1>

<p>Hi <%= @user.email %> </p>
<p>Followers:<%= @user.followers.count %></p>      
<p>Following:<%= @user.following.count %></p>      
<p>Since: <%= @user.created_at%></p> <br>

<ul>
  <% if @user.posts.any? %>
    <% @user.posts.each do |post| %>
      <%= link_to post.content, post_path(post) %> <br>

    <% end %>
  <% else %>
    <p>No Posts</p>
  <% end %>
</ul>
