<h1>Posts#index</h1>

<!-- Form to create a new post -->
<%= form_with model: Post.new, local: true do |form| %>
  <div>
    <%= form.label :content, "New Post:" %><br>
    <%= form.text_field :content, placeholder: "Write your post here..." %>
  </div>
  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>

<hr>

<!-- List of posts -->
<ul>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.content, post_path(post) %> by: <%= post.user.email || "Unknow User"%>
      </li>
    <% end %>
  <% else %>
    <p>No Posts</p>
  <% end %>
</ul>
